# Dec and enc Checker for Breadcrumbs
(dec(value).split("~")[1] != null && !/^[a-z-]+$/.test(value))
? dec(value).split("~")[1].replaceAll("_", " ")
: value.replaceAll("_", " ").replaceAll("-", " ")