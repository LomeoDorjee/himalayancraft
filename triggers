DROP TRIGGER IF EXISTS after_size_product_insert;

DELIMITER $$
CREATE TRIGGER after_size_product_insert 
AFTER INSERT ON sizes_products_links 
FOR EACH ROW 
BEGIN 
	DECLARE new_key INT;
	INSERT INTO inventories (stock, created_at, published_at, updated_at) VALUES (0, NOW(), NOW(), NOW()); 
    SET new_key = LAST_INSERT_ID();
    INSERT INTO inventories_size_links (inventory_id, size_id) VALUES (new_key, NEW.size_id);
    INSERT INTO inventories_product_links (inventory_id, product_id) VALUES (new_key, NEW.product_id);
END $$
DELIMITER ;